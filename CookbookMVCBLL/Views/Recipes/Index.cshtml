@model IEnumerable<CookbookLibrary.Entities.Recipe>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.instructions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.preparation_time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.servings)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.imageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.instructions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.preparation_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.servings)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.recipeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.recipeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.recipeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
