@model CookbookLibrary.Entities.User

@{
    ViewData["Title"] = "AccountPanel";
}
<!DOCTYPE html>
<head>
    <style>
        .leftrigft {
            float: left;
            margin-top: 200px;
            height: 400px;
            width: 30%;
            padding: 20px;
            text-align: center;
            
        }

        .left {
            width: 100px;
            height: 100px;
            background-image: url(https://cdn.icon-icons.com/icons2/2406/PNG/96/user_account_icon_145918.png);
            background-size: cover; /* Dodaj tę linię, aby dostosować rozmiar ikony do obszaru */
        }

        .left1 {
            /*clear: both;*/
            text-align: center;
            height: 140px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 12px 12px 20px #bdbdbd, -12px -12px 20px #ffffff;
            text-align: center;
            width: 140px;
        }

        .right {
            text-align: center;
            /*float: left*/;
            margin-top: 30px;
        }

        .break {
            height: 50px;
        }

        .uname {
            font-size: 24px;
            font-weight: bold;
            margin-top: 10px; 
        }

        .buttons {
            text-align: center;
            margin-top: 20px;
            width: 60%;
        }

        a.btn {
            margin-top: 10px;
            background-color: #773F26;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            text-align: center;
            width: 200px;
        }

            a.btn:hover {
                background-color: #4A2718;
            }
        .email{
            font-size: 16px
        }
    </style>
</head>
<body>
    <div class="break"></div>
    <div class="leftright">
            <div class="left1"> <div class="left"> </div> </div>
            <div class="right">
                <p class="uname">
                @Html.DisplayFor(model => model.username)
            </p>
            <p class="email">
                    @Html.DisplayFor(model => model.email)
            </p>
        <div>
           <a asp-action="EditAccount" asp-route-id="@Model.userId" class="btn btn-primary"> Edit Account</a>
        </div>
        <div>
            <a href="http://localhost:4200/LogInUser/@Model.userId" class="btn btn-primary">Main Page</a>
        </div>
        <div>
            <a asp-controller="Recipes" asp-action="Create" asp-route-id="@Model.userId" class="btn btn-primary">Add your recipe!</a>
        </div>
        <div>
            <a href="http://localhost:4200/LogOutUser" class="btn btn-primary">Logout</a>
        </div>
        </div>
        </div>
</body>
</html>