@model IEnumerable<CookbookLibrary.Entities.Ingredient>

@{
    ViewData["Title"] = "SelectIngredients";
}
<style>
    table thead tr:first-child {
        background-color: #FBF1E7;
    }

    h1 {
        margin-top: 20px;
        font-size: 24px;
        margin-bottom: 20px;
        text-align:center;
        color: #333;
        text
    }

    form div {
        margin-bottom: 15px;
        text-align: left;
    }

    label {
        display: block;
        font-weight: bold;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
        font-size: 16px;
    }

    .text-danger {
        color: #f00;
    }

    input[type="submit"] {
        background-color: #773F26;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 18px;
        cursor: pointer;
        text-align: center;
        width: 100%;
    }

    a {
        text-decoration: none;
        color: #773F26;
        font-weight: bold
    }

        a:hover {
            text-decoration: underline;
            color: #4A2718;
        }

        a.btn {
            background-color: #773F26;
            color: #fff;
            border-style:none;
        }

            a.btn:hover {
                background-color: #4A2718;
            }
    .next{
        text-align: right;
    }
     
</style>

<form asp-controller="IngredientsRecipe" asp-action="SaveSelectedIngredients" method="post">
    <h1>Add ingredients to you recipe</h1>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.name)</th>
                <th>@Html.DisplayNameFor(model => model.category)</th>
                <th>Select</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                        <input type="hidden" name="selectedIngredient" value="@item.ingredientId" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.category)
                    </td>
                    <td>
                        <a href="@Url.Action("Create", "IngredientRecipes", new { ingredientId = item.ingredientId })" class="btn btn-primary">Add</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
    The ingredient you are looking for is not on the list? <a asp-action="AddIngredients">Add Ingredients</a>
    @*<button type="submit" formaction="/Ingredients/ChooseCategory" formmethod="post">Next</button>*@
    <div class="next">
        <a asp-controller="Categories" asp-action="Index" formmethod="postasp-route-id=" class="btn btn-primary">Next</a>
    </div>
    </div>
</form>